# NOTE we use "*" as "/" is already used by the dokku nginx-vhosts generated nginx.conf..
# NOTE Using "*" may be a performance caveat

# TODO honor depth on $http_x_forwarded_for IPs

location * {
  proxy_set_header X-Forwarded-Proto $http_x_forwarded_proto;
  proxy_set_header X-Forwarded-For $http_x_forwarded_for;
  proxy_set_header X-Forwarded-Port $http_x_forwarded_port;
}
